# exiting i3
mode "exit: [l]ogout, [r]eboot, [p]oweroff" {

  bindsym l exec i3-msg exit

  bindsym r exec systemctl reboot

  bindsym p exec systemctl poweroff

  bindsym Escape mode "default"

  bindsym Return mode "default"

} 
